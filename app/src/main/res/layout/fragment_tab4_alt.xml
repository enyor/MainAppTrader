<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    tools:context="co.kaizenpro.mainapp.mainapptrader.Preview">


    <com.github.chrisbanes.photoview.PhotoView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="132dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/caja1"
        android:layout_width="150dp"
        android:layout_height="wrap_content"

        android:alpha="0"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <RatingBar
                    android:id="@+id/ratingBar5P"
                    style="@style/Widget.AppCompat.RatingBar.Small"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:rating="3.5"
                    android:theme="@style/RatingBar" />

                <TextView
                    android:id="@+id/nomP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Karla Guindi"
                    android:textColor="@color/Magent3"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/espP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Estilista"
                    android:textColor="@color/Magent3"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/anoP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="26 años"
                    android:textColor="@color/Magent3" />

                <TextView
                    android:id="@+id/textoP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Experta en coloración"
                    android:textColor="@color/Magent3" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/caja2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <RatingBar
                    android:id="@+id/ratingBar5"
                    style="@style/Widget.AppCompat.RatingBar.Small"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:rating="3.5"
                    android:theme="@style/RatingBar" />

                <TextView
                    android:id="@+id/nomD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Karla Guindi"
                    android:textColor="@color/Magent3"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/espD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Estilista"
                    android:textColor="@color/Magent3"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/anoD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="26 años"
                    android:textColor="@color/Magent3" />

                <TextView
                    android:id="@+id/textoD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Experta en coloración"
                    android:textColor="@color/Magent3" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:background="@color/cardview_light_background"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textoampD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Con 8 años de experiencia, diversos cursos y diplomados realizados. La mejor atención, trabajaré para ofrecerte la mejor imágen de ti misma, para que te veas por fuera como eres por dentro. "
                android:textColor="@color/Magent2"
                android:textSize="12sp"
                android:textStyle="italic" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:layout_marginTop="30dp"
            android:background="@color/cardview_light_background"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/invitaD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Karla Guindi espera tu reserva"
                android:textAlignment="center"
                android:textColor="@color/Magent3"
                android:textSize="14sp"
                android:textStyle="bold"
                android:visibility="gone" />
        </LinearLayout>

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:clickable="true"
        app:backgroundTint="@color/Verde"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@android:drawable/stat_sys_download_done" />

</android.support.constraint.ConstraintLayout>

